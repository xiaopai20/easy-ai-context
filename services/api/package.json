{
  "name": "@context/api",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "scripts": {
    "build": "node ../../node_modules/typescript/bin/tsc -p tsconfig.build.json",
    "type-check": "npm --workspace @context/shared run build && node ../../node_modules/typescript/bin/tsc --noEmit",
    "dev": "tsx watch src/local-server.ts",
    "test:unit": "node --test --import tsx tests/scope-utils.test.ts tests/safety.test.ts tests/rankers.test.ts tests/dal/context.test.ts tests/mcp-tools.test.ts",
    "test:integration": "node --test --import tsx tests/*Integration.test.ts"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.490.0",
    "@aws-sdk/lib-dynamodb": "^3.490.0",
    "@context/shared": "*",
    "aws-lambda": "^1.0.7",
    "stemmer": "^2.0.1",
    "ulid": "^3.0.2"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
